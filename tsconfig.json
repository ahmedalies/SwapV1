{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6"],
      "types": ["reflect-metadata"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./build",
      "sourceMap": true
  },
  "include": [
     "./src"
  ],
  "exclude": [
      "node_modules"
  ]
}